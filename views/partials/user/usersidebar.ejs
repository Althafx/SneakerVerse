<div class="col-md-3">
    <div class="sidebar">
        <div class="sidebar-profile">
            <div class="profile-image">
                <img src="https://ui-avatars.com/api/?name=<%= user.name %>&background=e69823&color=fff" alt="Profile">
            </div>
            <div class="profile-name"><%= user.name %></div>
            <div class="profile-email"><%= user.email %></div>
        </div>

        <div class="nav-menu">
            <div class="nav-item">
                <a href="/userprofile" class="nav-link <%= path === '/userprofile' ? 'active' : '' %>">
                    <i class="fa-solid fa-circle-user"></i>
                    <span class="nav-text">My Info</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/wishlist" class="nav-link <%= path === '/wishlist' ? 'active' : '' %>">
                    <i class="fa-solid fa-heart"></i>
                    <span class="nav-text">Wishlist</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/orders" class="nav-link <%= path === '/orders' ? 'active' : '' %>">
                    <i class="fa-solid fa-box"></i>
                    <span class="nav-text">My Orders</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/wallet" class="nav-link <%= path === '/wallet' ? 'active' : '' %>">
                    <i class="fa-solid fa-wallet"></i>
                    <span class="nav-text">My Wallet</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/logout" class="nav-link">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span class="nav-text">Sign Out</span>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
     a{
        text-decoration: none !important;
    }
    .sidebar {
        min-height: 100vh;
        background: #1a1a1a;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 2rem;
        position: sticky;
        top: 0;
    }
    .sidebar-profile {
        padding: 1.5rem;
        text-align: center;
        margin-bottom: 2rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        backdrop-filter: blur(10px);
    }
    .profile-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin: 0 auto 1rem;
        overflow: hidden;
        border: 3px solid #e69823;
    }
    .profile-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .profile-name {
        color: #fff;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.3rem;
    }
    .profile-email {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
    }
    .nav-menu {
        padding: 0 1rem;
    }
    .nav-item {
        margin-bottom: 0.5rem;
    }
    .nav-link {
        display: flex;
        align-items: center;
        padding: 0.8rem 1.2rem;
        color: rgba(255, 255, 255, 0.8);
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none;
    }
    .nav-link:hover {
        background: rgba(255, 255, 255, 0.05);
        color: #fff;
        transform: translateX(5px);
    }
    .nav-link.active {
        background: #e69823;
        color: #fff;
        box-shadow: 0 4px 15px rgba(230, 152, 35, 0.2);
    }
