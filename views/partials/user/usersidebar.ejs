<div class="col-md-3">
    <div class="sidebar">
        <div class="sidebar-profile">
            <div class="profile-image">
                <img src="https://ui-avatars.com/api/?name=<%= user.name %>&background=bef17b&color=fff" alt="Profile">
            </div>
            <div class="profile-name"><%= user.name %></div>
            <div class="profile-email"><%= user.email %></div>
        </div>

        <div class="nav-menu">
            <div class="nav-item">
                <a href="/userprofile" class="nav-link <%= path === '/userprofile' ? 'active' : '' %>">
                    <i class="fa-solid fa-circle-user"></i>
                    <span class="nav-text">My Info</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/wishlist" class="nav-link <%= path === '/wishlist' ? 'active' : '' %>">
                    <i class="fa-solid fa-heart"></i>
                    <span class="nav-text">Wishlist</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/orders" class="nav-link <%= path === '/orders' ? 'active' : '' %>">
                    <i class="fa-solid fa-box"></i>
                    <span class="nav-text">My Orders</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/wallet" class="nav-link <%= path === '/wallet' ? 'active' : '' %>">
                    <i class="fa-solid fa-wallet"></i>
                    <span class="nav-text">My Wallet</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/logout" class="nav-link">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span class="nav-text">Sign Out</span>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .sidebar {
        min-height: 100vh;
        background: linear-gradient(145deg, #5f8847, #ffffff);
        border-right: 1px solid rgba(0, 0, 0, 0.05);
        padding-top: 2rem;
        position: sticky;
        top: 0;
        border-radius: 20px;
    }
    .sidebar-profile {
        padding: 1.5rem;
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
    }
    .sidebar-profile::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 50px;
        height: 3px;
        background: linear-gradient(90deg, #bef17b, #e2ff62);
        border-radius: 2px;
    }
    .profile-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-bottom: 1rem;
        padding: 3px;
        background: linear-gradient(90deg, #bef17b, #e2ff62);
    }
    .profile-image img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #fff;
    }
    .profile-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.3rem;
    }
    .profile-email {
        font-size: 0.9rem;
        color: #feffff;
    }
    .nav-menu {
        padding: 0 1rem;
    }
    .nav-item {
        margin-bottom: 0.5rem;
    }
    .nav-link {
        display: flex;
        align-items: center;
        padding: 0.8rem 1.2rem;
        color: #2c3e50;
        border-radius: 12px;
        transition: all 0.3s ease;
        font-weight: 500;
        text-decoration: none;
    }
    .nav-link:hover {
        background: rgba(190, 241, 123, 0.2);
        color: #2c3e50;
        transform: translateX(5px);
    }
    .nav-link.active {
        background: linear-gradient(90deg, #bef17b, #e2ff62);
        color: #2c3e50;
        box-shadow: 0 4px 15px rgba(190, 241, 123, 0.2);
    }
    .nav-link i {
        width: 20px;
        margin-right: 10px;
        font-size: 1.1rem;
    }
    .nav-text {
        font-size: 0.95rem;
    }
    .divider {
        height: 1px;
        background: rgba(0, 0, 0, 0.05);
        margin: 1rem 0;
    }
</style>