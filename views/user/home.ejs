<script>
async function addToCart(productId) {
    try {
        const response = await fetch('/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
                productId,
                size: 'M' // Default to medium size
            })
        });

        // Check if redirected to login page
        if (response.redirected || !response.ok) {
            if (response.url.includes('login')) {
                window.location.href = '/login';
                return;
            }
        }

        let data;
        try {
            data = await response.json();
        } catch (error) {
            // If JSON parsing fails, redirect to login
            if (response.url.includes('login') || response.status === 401) {
                window.location.href = '/login';
                return;
            }
            throw error;
        }
        
        if (data.success) {
            Swal.fire({
                title: 'Success!',
                text: 'Item added to cart (Size M)',
                icon: 'success',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        } else {
            // If medium size is out of stock, try small
            if (data.message.includes('out of stock') || data.message.includes('not available')) {
                try {
                    const response2 = await fetch('/cart/add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ 
                            productId,
                            size: 'S'
                        })
                    });

                    if (response2.redirected || !response2.ok) {
                        if (response2.url.includes('login')) {
                            window.location.href = '/login';
                            return;
                        }
                    }

                    const data2 = await response2.json();
                    
                    if (data2.success) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Item added to cart (Size S)',
                            icon: 'success',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                        return;
                    }
                    
                    // Try large if small is also not available
                    const response3 = await fetch('/cart/add', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ 
                            productId,
                            size: 'L'
                        })
                    });

                    if (response3.redirected || !response3.ok) {
                        if (response3.url.includes('login')) {
                            window.location.href = '/login';
                            return;
                        }
                    }
                    
                    const data3 = await response3.json();
                    
                    if (data3.success) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Item added to cart (Size L)',
                            icon: 'success',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                        return;
                    }

                    // If no size is available
                    Swal.fire({
                        title: 'Error!',
                        text: 'Product is out of stock in all sizes',
                        icon: 'error',
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000,
                        timerProgressBar: true
                    });
                } catch (error) {
                    if (error.message.includes('JSON')) {
                        window.location.href = '/login';
                        return;
                    }
                    throw error;
                }
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message,
                    icon: 'error',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
            }
        }
    } catch (error) {
        console.error('Error:', error);
        // Check if user needs to log in
        if (error.message.includes('JSON')) {
            window.location.href = '/login';
            return;
        }
        
        Swal.fire({
            title: 'Error!',
            text: 'An error occurred while adding to cart',
            icon: 'error',
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true
        });
    }
}

