                <div class="product-img-action-wrap">
                  <div class="product-img product-img-zoom">
                    <a href="/productDetails?id=${product._id}">
                      <img class="default-img" src="/uploads/product-images/${product.productImage[0]}" alt="${product.productName}">
                    </a>
                  </div>
                  <div class="product-action-1">
                    <a aria-label="Add To Wishlist" href="/addToWishlist?id=${product._id}" class="action-btn hover-up">
                      <i class="fas fa-cart"></i>
                    </a>
                  </div>
                </div>
                <div class="product-content-wrap">
                  <h6>${product.productName}</h6>
                  <h5> ₹${product.salesPrice}</h5>
                  <h6>${product.category.name}</h6>
                  <button onclick="addToCart('${product._id}')" class="btn">Add To Cart</button>
                </div>
              </div>
            </div>
        `;
    });
    
    productContainer.innerHTML = html;
    
    // Reinitialize background images
    const setBackground = function (el) {
        const bg = el.getAttribute('data-setbg');
        el.style.backgroundImage = `url(${bg})`;
    };
    
    document.querySelectorAll('.set-bg').forEach(element => {
        setBackground(element);
    });
}

// Function to fetch filtered products
async function fetchFilteredProducts() {
    const searchInput = document.querySelector('.search-box input').value;
    const sortSelect = document.querySelector('.sort-select').value;
    const categoryInput = document.querySelector('input[name="category"]:checked').value;
    const brandInput = document.querySelector('input[name="brand"]:checked').value;
    
    try {
        const response = await fetch(`/filter-products?search=${searchInput}&sort=${sortSelect}&category=${categoryInput}&brand=${brandInput}`);
        const data = await response.json();
        
        if (data.success) {
            updateProductList(data.products);
        } else {
            console.error('Error:', data.message);
        }
    } catch (error) {
        console.error('Error fetching filtered products:', error);
    }
}

// Add event listeners
document.addEventListener('DOMContentLoaded', function() {
    // Search input
    const searchInput = document.querySelector('.search-box input');
    let searchTimeout;
    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(fetchFilteredProducts, 500); // Debounce search
    });
    
    // Sort select
    document.querySelector('.sort-select').addEventListener('change', fetchFilteredProducts);
    
    // Category radio buttons
    document.querySelectorAll('input[name="category"]').forEach(radio => {
        radio.addEventListener('change', fetchFilteredProducts);
    });
    
    // Brand radio buttons
    document.querySelectorAll('input[name="brand"]').forEach(radio => {
        radio.addEventListener('change', fetchFilteredProducts);
    });
    
    // Initial load
    fetchFilteredProducts();
});

</script>

