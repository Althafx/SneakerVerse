<%- include('../partials/user/header') %>
<style>
    
    .success-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #696969 0%, #ffffff 100%);
        padding: 20px;
    }
    
    .success-content {
        background: white;
        padding: 40px;
        border-radius: 30px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 600px;
        width: 100%;
        animation: slideUp 0.5s ease-out forwards;
        transform: translateY(50px);
        opacity: 0;
    }
    
    @keyframes slideUp {
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
    
    .success-animation {
        width: 100px;
        height: 100px;
        margin: 0 auto 30px;
    }
    
    .checkmark {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: block;
        stroke-width: 2;
        stroke: #4bb71b;
        stroke-miterlimit: 10;
        box-shadow: 0 0 20px rgba(75, 183, 27, 0.2);
        animation: fill .4s ease-in-out .4s forwards, scale .3s ease-in-out .9s both;
    }
    
    .checkmark__circle {
        stroke-dasharray: 166;
        stroke-dashoffset: 166;
        stroke-width: 2;
        stroke-miterlimit: 10;
        stroke: #4bb71b;
        fill: none;
        animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
    }
    
    .checkmark__check {
        transform-origin: 50% 50%;
        stroke-dasharray: 48;
        stroke-dashoffset: 48;
        animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards;
    }
    
    @keyframes stroke {
        100% { stroke-dashoffset: 0; }
    }
    
    @keyframes scale {
        0%, 100% { transform: none; }
        50% { transform: scale3d(1.1, 1.1, 1); }
    }
    
    @keyframes fill {
        100% { box-shadow: inset 0 0 0 100px rgba(75, 183, 27, 0.2); }
    }
    
    .success-title {
        color: #2d3436;
        font-size: 2.5rem;
        margin-bottom: 20px;
        animation: fadeIn 0.5s ease-out 0.5s forwards;
        opacity: 0;
    }
    
    .success-message {
        color: #636e72;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 40px;
        animation: fadeIn 0.5s ease-out 0.7s forwards;
        opacity: 0;
    }
    
    .status {
        color: #2d3436;
        font-weight: 500;
    }
    
    .action-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        animation: fadeIn 0.5s ease-out 0.9s forwards;
        opacity: 0;
    }
    
    .btn {
        padding: 12px 30px;
        border-radius: 15px;
        border: none;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        position: relative;
        overflow: hidden;
    }
    
    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0.2));
        transform: translateY(100%);
        transition: transform 0.3s ease;
    }
    
    .btn:hover::before {
        transform: translateY(0);
    }
    
    .btn-home {
        background: #e17055;
        color: white;
    }
    
    .btn-orders {
        background: #0984e3;
        color: white;
    }
    
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .btn-content {
        display: flex;
        align-items: center;
        gap: 10px;
        position: relative;
        z-index: 1;
    }
    
    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }
    
    @media (max-width: 480px) {
        .success-content {
            padding: 30px 20px;
        }
    
        .action-buttons {
            flex-direction: column;
        }
    
        .success-title {
            font-size: 2rem;
        }
    }
    </style>
    
<div class="success-container">
    <div class="success-content">
        <div class="success-animation">
            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none"/>
                <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
            </svg>
        </div>
        <h1 class="success-title">Order Placed Successfully!</h1>
        <div class="success-message">
            <p>Thank you for shopping with SneakerVerse</p>
            <p class="status">Your order has been confirmed and will be shipped soon.</p>
        </div>
        <div class="action-buttons">
            <a href="/home" class="btn btn-home">
                <span class="btn-content">
                    <i class="fas fa-home"></i>
                    <span>Back to Home</span>
                </span>
            </a>
            <a href="/orders" class="btn btn-orders">
                <span class="btn-content">
                    <i class="fas fa-box"></i>
                    <span>View Orders</span>
                </span>
            </a>
        </div>
    </div>
</div>


<%- include('../partials/user/footer') %>