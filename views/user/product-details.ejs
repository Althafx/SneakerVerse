<%-include("../../views/partials/user/header")%>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet">

<style>
    .breadcrumb {
        background-color: #f8f9fa;
        padding: 10px 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    body{
        background-color: rgb(190, 190, 190);
    }
    .product-title {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
    }
    .product-description {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
    }
    .product-priceR {
        font-size: 24px;
        color: #54b919;
        margin-bottom: 10px;
        font-weight: bold;
    }
    .product-price {
        font-size: 24px;
        color: #ac0000;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .button {
        background-color: #e91e63;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
        font-size: 16px;
        font-weight: 500;
        box-shadow: 0 4px 20px rgba(255, 35, 101, 0.884);
        margin-right: 30px;
    }
    .button1 {
        background-color: #60af4c;
        color: white;
        padding: 12px 24px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
        font-size: 16px;
        font-weight: 500;
        box-shadow: 0 4px 20px rgba(71, 204, 18, 0.884);
    }
    .button:hover {
        background-color: #d81b60;
        transform: scale(1.02);
    }
    .button1:hover {
        background-color: #699e5c;
        transform: scale(1.02);
    }
    .carousel-inner img {
        border-radius: 10px;
        
    }
    .rating {
        color: #ffd700;
        margin-bottom: 10px;
    }
    @media (max-width: 768px) {
        .product-title {
            font-size: 24px;
        }
        .product-price {
            font-size: 20px;
        }
        .button {
            width: auto;
            margin-bottom: 10px;
        }
        .button1 {
            width: auto;
        }
    }
    .carousel {
        box-shadow: 0 4px 20px rgba(43, 241, 255, 0.884);
        border-radius: 10px;

    }
    .carousel-inner{
        border-radius: 10px;
    }
    .buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
    .zoom-container {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
    }
    
    .zoom-container img {
        max-width: 100%;
        height: auto;
    }
    
    .zoomImg {
        border-radius: 10px;
    }
    .product-image-link {
        display: block;
        cursor: zoom-in;
    }
    
    .product-image-link:hover {
        opacity: 0.9;
    }
    
    /* Customize lightbox */
    .lb-data .lb-caption {
        font-size: 16px;
        font-weight: bold;
    }

    /* Product Card Styles */
    .product-cart-wrap {
        border: none;
        padding: 20px;
        margin-bottom: 30px;
        background-color: rgba(59, 59, 59, 0.2);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(99, 231, 11, 0.87);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    
    .product-cart-wrap:hover {
        transform: scale(1.03);
        box-shadow: 0 15px 27px rgba(43, 241, 255, 0.87);
    }

    .product-img-action-wrap {
        position: relative;
        flex: 0 0 auto;
    }

    .product-img {
        position: relative;
        display: block;
        overflow: hidden;
        padding-bottom: 100%;
    }

    .product-img img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-content-wrap {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding-top: 15px;
    }

    .product-content-wrap h6 {
        font-size: 18px;
        color: #ffffff;
        margin-bottom: 5px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-content-wrap h5 {
        font-size: 16px;
        color: #43e702;
        margin-bottom: 10px;
    }

    .btn {
        display: inline-block;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background-color: #2b2b2b;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.3s;
        cursor: pointer;
        text-align: center;
    }

    .btn:hover {
        background-color: #4dcae9;
        transform: translateY(-2px);
        color: white;
    }
    .out-of-stock {
        color: #ff0000;
        font-weight: bold;
        font-style: italic;
    }
</style>

<main class="main">
    <div class="container mt-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Shop</a></li>
                <li class="breadcrumb-item"><a href="#"><%= product.category.name %></a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= product.productName %></li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-6">
                <div id="productCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <% for(let i = 0; i < product.productImage.length; i++) { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                <a href="/uploads/product-images/<%= product.productImage[i] %>" 
                                   data-lightbox="product-gallery" 
                                   data-title="<%= product.productName %>"
                                   class="product-image-link">
                                    <img src="/uploads/product-images/<%= product.productImage[i] %>" 
                                         class="d-block w-100" 
                                         alt="Product Image <%= i + 1 %>">
                                </a>
                            </div>
                        <% } %>
                    </div>
                    <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="product-details mb-4 mt-4">
                    <h4>Sneaker Description</h4>
                    <h2 class="product-title"><%= product.productName %></h2>
                    <p class="product-description" id="shortDescription"><%= product.description.split('\n').slice(0, 2).join('\n') %>...</p>
                    <a href="#" id="readMore" onclick="toggleDescription()">Read More</a>
                    <p class="product-description d-none" id="fullDescription"><%= product.description %></p>
                </div>
            </div>
            <div class="col-md-6">
                <h2 class="product-title"><%= product.productName %></h2>
                <div class="rating">
                    <span>&#9733;&#9733;&#9733;&#9733;&#9734;</span> 4.0 (25 reviews)
                </div>

                <h4 class="product-price"><del>₹<%=product.regularPrice%></del></h4>
                <h4 class="product-priceR">₹<%=product.salesPrice%></h4>
                <p><strong>Category:</strong> <%=product.category.name%></p>
                <p><strong>Brand:</strong> <%=product.brand%></p>
                <div class="size-selection mb-4">
                    <h5>Select Size:</h5>
                    <button class="btn btn-outline-secondary">S</button>
                    <button class="btn btn-outline-secondary">M</button>
                    <button class="btn btn-outline-secondary">L</button>
                </div>
                <div class="stock-quantities mb-4">
                    <h5>Stock Availability:</h5>
                    <p>Small: 
                        <% if (product.quantities.small === 0) { %>
                            <span class="out-of-stock">Out of Stock</span>
                        <% } else { %>
                            <%= product.quantities.small %> left
                        <% } %>
                    </p>
                    <p>Medium: 
                        <% if (product.quantities.medium === 0) { %>
                            <span class="out-of-stock">Out of Stock</span>
                        <% } else { %>
                            <%= product.quantities.medium %> left
                        <% } %>
                    </p>
                    <p>Large: 
                        <% if (product.quantities.large === 0) { %>
                            <span class="out-of-stock">Out of Stock</span>
                        <% } else { %>
                            <%= product.quantities.large %> left
                        <% } %>
                    </p>
                </div>

                <div class="buttons mb-4">
                    <button class="button">Add to Cart</button>
                    <button class="button1">Buy Now</button>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Related Products Section -->
<section class="related-products spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="mb-4 text-white">Related Products</h3>
            </div>
        </div>
        <div class="row">
            <% for(let i = 0; i < relatedProducts.length; i++) { %>
                <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                    <div class="product-cart-wrap">
                        <div class="product-img-action-wrap">
                            <div class="product-img product-img-zoom">
                                <a href="/productDetails?id=<%=relatedProducts[i]._id%>">
                                    <img class="default-img" src="/uploads/product-images/<%=relatedProducts[i].productImage[0]%>" alt="<%=relatedProducts[i].productName%>">
                                </a>
                            </div>
                        </div>

                        <div class="product-content-wrap">
                            <h6><%= relatedProducts[i].productName %></h6>
                            <h5> ₹<%= relatedProducts[i].salesPrice %></h5>
                            <h6><%= relatedProducts[i].category.name %></h6>
                            <a href="/addToCart?id=<%=relatedProducts[i]._id%>" class="btn">Add To Cart</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
<script>
    // Configure Lightbox
    lightbox.option({
        'resizeDuration': 200,
        'wrapAround': true,
        'showImageNumberLabel': false,
        'fadeDuration': 200,
        'maxWidth': 1200,
        'maxHeight': 1200
    });
    
    function toggleDescription() {
        const shortDesc = document.getElementById('shortDescription');
        const fullDesc = document.getElementById('fullDescription');
        const readMore = document.getElementById('readMore');
        shortDesc.classList.toggle('d-none');
        fullDesc.classList.toggle('d-none');
        readMore.textContent = readMore.textContent === 'Read More' ? 'Read Less' : 'Read More';
    }
</script>

<%- include("../../views/partials/user/footer") %>
