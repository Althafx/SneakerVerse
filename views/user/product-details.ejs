    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>
<script>
    // Configure Lightbox
    lightbox.option({
        'resizeDuration': 200,
        'wrapAround': true,
        'showImageNumberLabel': false,
        'fadeDuration': 200,
        'maxWidth': 1200,
        'maxHeight': 1200
    });
    
    function toggleDescription() {
        const shortDesc = document.getElementById('shortDescription');
        const fullDesc = document.getElementById('fullDescription');
        const readMore = document.getElementById('readMore');
        shortDesc.classList.toggle('d-none');
        fullDesc.classList.toggle('d-none');
        readMore.textContent = readMore.textContent === 'Read More' ? 'Read Less' : 'Read More';
    }

    let selectedSize = null;
    let currentStock = 0;

    function selectSize(size) {
        selectedSize = size;
        
        // Update button styles
        document.querySelectorAll('.size-btn').forEach(btn => {
            btn.classList.remove('selected');
        });
        const selectedButton = document.getElementById('size' + size);
        selectedButton.classList.add('selected');
        
        // Get stock for selected size
        currentStock = parseInt(selectedButton.getAttribute('data-stock'));
        
        // Update stock message
        const stockMessage = document.getElementById('stockMessage');
        if (currentStock > 0) {
            stockMessage.textContent = `${currentStock} in stock`;
            stockMessage.style.color = '#28a745';
        } else {
            stockMessage.textContent = 'Out of stock';
            stockMessage.style.color = '#dc3545';
        }
        
        // Enable add to cart button if stock available
        document.getElementById('addToCartBtn').disabled = currentStock === 0;
        
        // Adjust quantity if it's more than available stock
        const quantityInput = document.getElementById('quantity');
        if (parseInt(quantityInput.value) > currentStock) {
            quantityInput.value = currentStock;
        }
    }

    function updateQuantity(action) {
        const quantityInput = document.getElementById('quantity');
        let currentValue = parseInt(quantityInput.value);
        
        if (!selectedSize) {
            Swal.fire({
                title: 'Select Size',
                text: 'Please select a size first',
                icon: 'warning',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
            return;
        }
        
        if (action === 'increase') {
            if (currentValue < currentStock) {
                quantityInput.value = currentValue + 1;
            } else {
                Swal.fire({
                    title: 'Stock Limit',
                    text: `Only ${currentStock} items available in size ${selectedSize}`,
                    icon: 'warning',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
            }
        } else if (action === 'decrease' && currentValue > 1) {
            quantityInput.value = currentValue - 1;
        }
    }

    function validateQuantity(input) {
        let value = parseInt(input.value);
        if (isNaN(value) || value < 1) {
            input.value = 1;
        } else if (value > currentStock) {
            input.value = currentStock;
            Swal.fire({
                title: 'Stock Limit',
                text: `Only ${currentStock} items available in size ${selectedSize}`,
                icon: 'warning',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
        }
    }

    async function addToCart(productId) {
        if (!selectedSize) {
            Swal.fire({
                title: 'Select Size',
                text: 'Please select a size before adding to cart',
                icon: 'warning',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
            return;
        }

        const quantity = parseInt(document.getElementById('quantity').value);
        if (isNaN(quantity) || quantity < 1) {
            Swal.fire({
                title: 'Invalid Quantity',
                text: 'Please select a valid quantity',
                icon: 'warning',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
            return;
        }

        try {
            const response = await fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    productId,
                    size: selectedSize,
                    quantity: quantity
                })
            });

            if (response.redirected || !response.ok) {
                if (response.url.includes('login')) {
                    window.location.href = '/login';
                    return;
                }
            }

            const data = await response.json();
            
            if (data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: `Added ${quantity} item(s) to cart (Size ${selectedSize})`,
                    icon: 'success',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message,
                    icon: 'error',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true
                });
            }
        } catch (error) {
            console.error('Error:', error);
            if (error.message.includes('JSON')) {
                window.location.href = '/login';
                return;
            }
            
            Swal.fire({
                title: 'Error!',
                text: 'An error occurred while adding to cart',
                icon: 'error',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        }
    }
</script>

