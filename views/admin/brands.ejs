<%- include("../../views/admin/adminPartials/sidebar") %>
<%- include('../admin/adminPartials/cursor') %>
<style>
  /* General Styling */
  .content-main {
    background-image: url('/img/sneakers/brandsadmin.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: 100vh;
    font-family: Arial, sans-serif;

  }

  .glass-card {
    background: rgba(223, 203, 23, 0.15);
    border-radius: 15px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    color: #333;
    padding: 20px;

  }

  .table-responsive {
    border-radius: 10px;
    overflow: hidden;
  }
  a{
    text-decoration: none;
  }

  .table-hover tbody tr:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
  }

  .pagination-container {
    text-align: center;
    margin-top: 20px;
  }

  .pagination a,
  .pagination .current-page {
    display: inline-block;
    padding: 5px 10px;
    margin: 0 5px;
    border: 1px solid #ddd;
    text-decoration: none;
    color: #007bff;
  }

  .pagination a:hover {
    background-color: #f5f5f5;
    color: #0056b3;
  }

  .error-message {
    color: red;
  }

  /* Responsive Styling */
  @media (max-width: 1200px) {
    .glass-card {
      margin-top: 20px;
    }
    .content-main {
      margin-left: 260px;
      padding: 15px;
    }
  }

  @media (max-width: 768px) {
    .glass-card {
      margin: 10px;
    }
    .content-main {
      margin-left: 0;
      padding: 10px;
    }
  }
</style>

<section class="content-main">
  <div class="container">
    <div class="glass-card">
      <div class="content-header text-center">
        <h2 class="content-title card-title text-light">Brand Management</h2>
        <p class="text-light">Add and manage your brands effortlessly</p>
      </div>

      <div class="row">
        <!-- Add Brand Form -->
        <div class="col-md-4">
          <form method="post" action="/admin/addBrand" enctype="multipart/form-data">
            <div class="mb-4">
              <label for="brand_name" class="form-label text-light">Brand Name</label>
              <input
                type="text"
                name="name"
                placeholder="Enter brand name"
                class="form-control"
              />
            </div>
            <div class="mb-4">
              <label for="brand_image" class="form-label text-light">Brand Image</label>
              <input
                type="file"
                name="image"
                class="form-control"
              />
            </div>
            <div class="d-grid">
              <button class="btn btn-warning text-light" type="submit">Add Brand</button>
            </div>
          </form>
        </div>

        <!-- Brand Table -->
        <div class="col-md-8">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Brand</th>
                  <th>Logo</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <%data.reverse().forEach((brand,index)=>{%>
                <tr>
                  <td class="text-start"><%=brand.brandName%></td>
                  <td class="text-start">
                    <div
                      class="d-flex align-items-center justify-content-center"
                      style="
                        width: 40px;
                        height: 40px;
                        border-radius: 50%;
                        overflow: hidden;">
                      <img
                        src="/uploads/re-image/<%=brand.brandImage[0]%>"
                        alt="<%=brand.brandName%>"
                        class="img-fluid rounded-circle"
                        style="width: 100%; height: auto"
                      />
                    </div>
                  </td>
                  <td class="text-start">
                    <%if(brand.isBlocked===true){%>

                    <span class="badge bg-danger">Blocked</span>
                    <%}else{%>
                    <span class="badge bg-success">Active</span>
                    <%}%>
                  </td>
                  <td>
                    <%if(brand.isBlocked===false){%>
                    <button class="btn btn-danger btn-sm">
                      <a href="/admin/blockBrand?id=<%=brand._id%>" class="text-white">Block</a>
                    </button>
                    <%}else{%>
                    <button class="btn btn-success btn-sm">
                      <a href="/admin/unblockBrand?id=<%=brand._id%>" class="text-white">Unblock</a>
                    </button>
                    <%}%>
                    <button class="btn btn-danger btn-sm" onclick="return confirmDelete()">
                      <a href="/admin/deleteBrand?id=<%=brand._id%>" class="text-white">Delete</a>
                    </button>
                  </td>
                </tr>
                <!-- Repeat Rows as Needed -->
                <%})%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <div class="pagination-container">
      <!-- Pagination Links -->
    </div>
  </div>
</section>

<script>
  function confirmDelete(){
    return confirm("Are you sure you want to delete this brand")
  }
</script>
